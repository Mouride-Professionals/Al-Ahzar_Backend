{
  "kind": "collectionType",
  "collectionName": "payments",
  "info": {
    "singularName": "payment",
    "pluralName": "payments",
    "displayName": "Payment",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "monthOf": {
      "type": "date",
      "required": false
    },
    "isPaid": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "enrollment": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::enrollment.enrollment",
      "inversedBy": "payments"
    },
    "amount": {
      "type": "decimal",
      "min": 0,
      "required": true
    },
    "paymentType": {
      "type": "enumeration",
      "enum": [
        "enrollment",
        "monthly",
        "exam",
        "blouse",
        "parentContribution",
        "other"
      ],
      "required": true
    },
    "motive": {
      "type": "string"
    },
    "comment": {
      "type": "text"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "paid",
        "cancelled"
      ],
      "default": "paid",
      "required": true
    },
    "cancellationReason": {
      "type": "text"
    },
    "cancelledAt": {
      "type": "date"
    }
  }
}
